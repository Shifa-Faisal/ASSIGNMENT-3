<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<style>
    body {
        background-color: hotpink;
}
</style>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">
                <div class="form-group">
                    <label for="nameTextField"> Hobby Name</label>
                    <input type="text" class="form-control"
                    id="hobbynameTextField"
                    placeholder="Enter name of hobby"
                    name="hobbyname" required>
                </div>
                <div class="form-group">
                    <label for="categoryTextField">Category</label>
                    <input type="text" class="form-control"
                    id="categoryTextField"
                    placeholder="Enter the hobby category"
                    name="category" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" class="form-control"
                    id="descriptionTextField"
                    placeholder="Enter the description of the hobby"
                    name="description" required>
                </div>
                <div class="form-group">
                    <label for="averagecostTextField">Average Cost ($)</label>
                    <input type="number" class="form-control"
                        id="averagecostTextField"
                        placeholder="Enter the average cost of the hobby"
                        name="averagecost" required min="0" step="1">
                </div>
                <div class="form-group">
                    <label for="priceTextField">Interaction Type</label>
                    <input type="text" class="form-control"
                    id="InteractiontypeTextField"
                    placeholder="Enter the number of people who can interact in this hobby"
                    name="interactiontype" required>
                </div>
                <div class="form-group">
                    <label for="starsofjoyratingTextField">Stars Of Joy (rating out of 5)</label>
                    <input type="number" class="form-control"
                        id="starsofjoyratingTextField"
                        placeholder="Enter the stars of joy (rating) for the hobby"
                        name="starsofjoyrating" required min="0" max="5" step="1">
                </div
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>
                <a href="/hobby" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
<%- include ../partials/footer.ejs %>